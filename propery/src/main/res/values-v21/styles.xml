<resources>

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="NormalAppTheme" parent="Base.AppTheme">
        <item name="android:statusBarColor">@color/blue_dark</item>
    </style>


    <style name="OverFlowMenuTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="ActionBarTheme" parent="Base.AppTheme">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>
