<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_black">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#fff"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/userinfo_image_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="107dp"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16">

                    <TextView
                        style="@style/s40404015"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="头像" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userinfo_image"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"/>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@color/cebebeb" />

                <RelativeLayout
                    android:id="@+id/userinfo_name_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="57dp"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16">

                    <TextView
                        android:id="@+id/userinfo_name_lable"
                        style="@style/s40404015"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="昵称" />

                    <TextView
                        android:id="@+id/userinfo_name_et"
                        style="@style/s40404014"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="54dp"
                        android:layout_toLeftOf="@+id/right_3"
                        android:layout_toRightOf="@+id/userinfo_name_lable"
                        android:gravity="center_vertical|right"
                        android:paddingRight="@dimen/dp_8"
                        android:hint=""
                        android:textColorHint="@color/c999999" />

                    <ImageView
                        android:id="@+id/right_3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/com_ic_right_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/cebebeb" />

                <RelativeLayout
                    android:id="@+id/userinfo_company_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="57dp"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16">

                    <TextView
                        android:id="@+id/userinfo_company_lable"
                        style="@style/s40404015"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="公司名称" />

                    <TextView
                        android:id="@+id/userinfo_company_tv"
                        style="@style/s40404014"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="37dp"
                        android:layout_toRightOf="@+id/userinfo_company_lable"
                        android:gravity="center_vertical|right"
                        android:paddingRight="@dimen/dp_8"
                        android:text="" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/cebebeb" />

                <RelativeLayout
                    android:id="@+id/userinfo_mobile_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="57dp"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16">

                    <TextView
                        android:id="@+id/userinfo_mobile_lable"
                        style="@style/s40404015"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="联系方式" />

                    <TextView
                        android:id="@+id/userinfo_mobile"
                        style="@style/s40404014"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="21dp"
                        android:layout_toRightOf="@+id/userinfo_mobile_lable"
                        android:gravity="center_vertical|right"
                        android:paddingRight="@dimen/dp_8"
                        android:text="" />

                </RelativeLayout>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@color/cebebeb" />
                <RelativeLayout
                    android:id="@+id/userinfo_password_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="57dp"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16">

                    <TextView
                        android:id="@+id/userinfo_password_lable"
                        style="@style/s40404015"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="修改密码" />

                    <ImageView
                        android:id="@+id/userinfo_name_password"
                        style="@style/s40404015"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/com_ic_right_arrow" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>